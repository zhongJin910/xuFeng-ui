{
  "name": "xufeng-ui",
  "version": "1.0.1-alpha.2",
  "private": false,
  "author": "z206674576@163.com",
  "description": "xufeng Design - A Vue.js 3 UI library, xufeng-ui",
  "repository": {
    "type": "git",
    "url": "https://github.com/zj3213/xuFeng-ui.git"
  },
  "keywords": [
    "xufeng-ui"
  ],
  "files": [
    "lib/*",
    "components/*",
    "Readme.md",
    "package.json"
  ],
  "main": "./lib/index.umd.js",
  "module": "./lib/index.mjs",
  "exports": {
    ".": {
      "import": "./lib/index.mjs",
      "require": "./lib/index.umd.js"
    },
    "./lib/style.css": "./lib/style.css"
  },
  "engines": {
    "node": ">=16.0.0"
  },
  "scripts": {
    "dev": "vite",
    "build": "run-p type-check build-only",
    "preview": "vite preview",
    "build-only": "vite build",
    "type-check": "vue-tsc --noEmit",
    "vp": "npm version prerelease --preid=alpha -m 'update %s'",
    "lib": "node build/index.js",
    "build:publish":"npm run vp && npm run lib && npm publish",
    "lint": "eslint . --ext .vue,.js,.jsx,.cjs,.mjs,.ts,.tsx,.cts,.mts --fix --ignore-path .gitignore"
  },
  "dependencies": {
    "vue": "^3.2.45"
  },
  "devDependencies": {
    "@rushstack/eslint-patch": "^1.1.4",
    "@types/lodash": "^4.14.191",
    "@types/node": "^18.11.12",
    "@vitejs/plugin-vue": "^4.0.0",
    "@vitejs/plugin-vue-jsx": "^3.0.0",
    "@vue/eslint-config-typescript": "^11.0.0",
    "@vue/tsconfig": "^0.1.3",
    "eslint": "^8.22.0",
    "eslint-plugin-vue": "^9.3.0",
    "fs-extra": "^11.1.0",
    "npm-run-all": "^4.1.5",
    "typescript": "~4.7.4",
    "vite": "^4.0.0",
    "vite-plugin-importer": "^0.2.5",
    "vite-plugin-vue-setup-extend": "^0.4.0",
    "vue-tsc": "^1.0.12",
    "xufeng-ui": "1.0.1-alpha.2"
  }
}
